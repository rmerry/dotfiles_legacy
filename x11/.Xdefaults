! urxvt (terminal)  ---------------------------------------------------------------

URxvt*scrollBar:false
URxvt*urlLauncher: chromium

URxvt.depth:                32
URxvt.geometry:             90x30
URxvt.transparent:          false
URxvt.fading:               0

! URxvt.visualBell:           true
URxvt.urgentOnBell:         true
URxvt.loginShell:           true
URxvt.saveLines:            50
URxvt.internalBorder:       3
URxvt.lineSpace:            0
!disable ctrl+shift-x key bindings (conflicts with Vim)
URxvt*iso14755: False

! Fonts
URxvt.allow_bold:           true
!URxvt*font: xft:DejaVu Sans Mono:pixelsize=16
!URxvt*boldFont: xft:DejaVu Sans Mono:pixelsize=16
URxvt*font:               xft:Inconsolata:style=Medium:size=14:antialias=true:hinting=slight
URxvt*boldFont:           xft:Inconsolata:style=Bold:size=14:antialias=true:hinting=slight

