! URXVT (TERMINAL)  ---------------------------------------------------------------

! Colours
URxvt.background:               S_base03
URxvt.foreground:               S_base0
URxvt.fadeColor:                S_base03
URxvt.cursorColor:              S_base1
URxvt.pointerColorBackground:   S_base01
URxvt.pointerColorForeground:   S_base1
URxvt.color0:                   black 
URxvt.color1:                   red
URxvt.color2:                   green
URxvt.color3:                   yellow
URxvt.color4:                   blue
URxvt.color5:                   magenta
URxvt.color6:                   cyan
URxvt.color7:                   white
URxvt.color8:                   lblack
URxvt.color9:                   lred
URxvt.color10:                  lgreen
URxvt.color11:                  lyellow
URxvt.color12:                  lblue
URxvt.color13:                  lmagenta
URxvt.color14:                  lcyan
URxvt.color15:                  lwhite

! PERL EXTENSIONS
URxvt.perl-lib: .urxvt/
URxvt.perl-ext-common:      default,matcher,clipboard,resize-font

URxvt.resize-font.smaller: C-Down
URxvt.resize-font.bigger: C-Up

URxvt.scrollBar:            false
URxvt.scrollBar_right:      false
URxvt.scrollBar_floating:   false
URxvt.scrollstyle:          rxvt

URxvt.depth:                32
URxvt.fading:               0
URxvt.geometry:             90x30
URxvt.transparent:          false

! URxvt.visualBell:           true
URxvt.internalBorder:       3
URxvt.lineSpace:            0
URxvt.loginShell:           true
URxvt.saveLines:            50
URxvt.urgentOnBell:         true

!disable ctrl+shift-x key bindings (conflicts with Vim)
URxvt.iso14755:             false

! Fonts
URxvt.allow_bold:           true
URxvt.boldFont:             xft:Inconsolata:bold:size=14:antialias=true:hinting=slight
URxvt.font:                 xft:Inconsolata:medium:size=14:antialias=true:hinting=slight

! Clickable Links
URxvt.url-launcher:         /usr/bin/xdg-open
URxvt.matcher.button:       1

! Clipboard
! Requires the urxvtclip perlscript in /usr/lib/urxvt/perl
URxvt.keysym.Shift-Control-V: perl:clipboard:paste

